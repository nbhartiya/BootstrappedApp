<h3><%= @post.title%></h3>
posted by <%= @user.email %>
<br/>
<%= @post.updated_at.localtime.strftime("on %B %e, %Y %r") %>
<br/>
<h4>
<%= @post.content%>
<%= %>
</h4>

<%= link_to 'Reply', new_post_reply_path(@post) %>
<%= link_to 'Back', posts_path %>

<% @post.replies.each do |r| %>
<div>
<%= r.content %>
<h4>
<%= r.user.email %>
</h4>
</div>
<% end %>

<%= render :partial => "replies/form", :locals => {:reply => Reply.new} %>